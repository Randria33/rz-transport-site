# Netlify Headers Configuration for RZ TRANSPORT
# This file configures security headers for Netlify hosting

/*
  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self';

  # HTTPS Strict Transport Security (enable after deploying with HTTPS)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

# Cache static assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache CSS and JS
/assets/css/*
  Cache-Control: public, max-age=2592000

/assets/js/*
  Cache-Control: public, max-age=2592000

# Don't cache HTML
/*.html
  Cache-Control: no-cache, must-revalidate
